            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />

        <practice.practice.UI.LottoBall
            android:id="@+id/ball_matchingseven"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />


        <practice.practice.UI.LottoBall
            android:id="@+id/bonus_matching_one"
            android:layout_width="35dp"

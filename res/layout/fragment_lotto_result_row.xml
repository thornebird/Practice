            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />

        <practice.practice.UI.LottoBall
            android:id="@+id/ball_seven"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />


        <practice.practice.UI.LottoBall
            android:id="@+id/bonus_ball_one"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />

        <practice.practice.UI.LottoBall
            android:id="@+id/bonus_ball_two"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />

    </practice.practice.UI.LottoBallLayout>

    <TextView
        android:id="@+id/tv_matching_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />

    <practice.practice.UI.LottoBallLayout
        android:id="@+id/layout_matching_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <practice.practice.UI.LottoBall
            android:id="@+id/ball_matchingone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />

        <practice.practice.UI.LottoBall
            android:id="@+id/ball_matchingtwo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />

        <practice.practice.UI.LottoBall
            android:id="@+id/ball_matchingthree"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />


        <practice.practice.UI.LottoBall
            android:id="@+id/ball_matchingfour"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            app:circleLabel="test" />

